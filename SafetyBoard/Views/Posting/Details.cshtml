@model SafetyBoard.Models.Posting
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

<ul>
    <li>Safety Category: @Model.PostingType.SafetyCategory</li>
    <li>Time Posted: @Model.TimePosted.ToShortDateString()</li>
    <br />
    <li>Description: @Model.Description</li>
</ul>

