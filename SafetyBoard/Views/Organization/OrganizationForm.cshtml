@model SafetyBoard.Models.ViewModel.OrganizationFormViewModel
@{
    ViewBag.Title = "OrganizationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.PageTitle</h2>

@using (Html.BeginForm("AddOrganization","Organization"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Organization.Name)
        @Html.TextBoxFor(m => m.Organization.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Organization.Name)
    </div>
    @Html.HiddenFor(m => m.Organization.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}



