@model SafetyBoard.Models.ViewModel.UserViewModel
@{
    ViewBag.Title = "UserForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.PageTitle</h2>

@using (Html.BeginForm("Save", "User"))
{
    @Html.ValidationSummary(true,"Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m => m.User.Name)
        @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.User.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.BirthDate)
        @Html.TextBoxFor(m => m.User.BirthDate,"{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.User.BirthDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.Organization)
        @Html.TextBoxFor(m => m.User.Organization, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.Organization)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.User.UserTypeId)
        @Html.DropDownListFor(m => m.User.UserTypeId, new SelectList(Model.UserType, "Id", "Title"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.UserTypeId)
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.User.IsSubscribeToNewsletter) Subscribe to Newsletter?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.HiddenFor(m => m.User.Id)
    @Html.AntiForgeryToken()
}
@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
    }

