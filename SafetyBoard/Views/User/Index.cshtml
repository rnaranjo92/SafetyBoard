@model IEnumerable<SafetyBoard.Models.ViewModel.UserViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>

<table id="users" class="table table-bordered table-hover">

    <thead>
        <tr>
            <td>Id</td>
            <td>Email</td>
            <td>PhoneNumber</td>
            <td>Organization</td>
            <td>Allow Post</td>
            <td>Delete</td>
        </tr>
    </thead>
    @foreach (var user in Model)
    {
    <tr>
        <td>@user.Id</td>
        <td>@user.Email</td>
        <td>@user.PhoneNumber</td>
        <td>@user.Organization</td>
        <td>@user.AllowAccess</td>
        <td>
            <button class="btn-link js-delete" data-user-id="@user.Id">Delete</button>
        </td>
    </tr>
    }
</table>
@section scripts
    {
    <script>
        $(document).ready(function () {
            var table = $("#users").DataTable();

            $("#users").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/user/" + button.attr("data-user-id"),
                            method: "DELETE",
                            success: function () {
                                location.reload();
                            }
                        });
                    }
                })
            });
        });
    </script>
    }

